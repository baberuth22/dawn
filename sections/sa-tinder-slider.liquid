{% schema %}
{
  "name": "SA - Tinder Swiper",
  "settings": [
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height (px)",
      "min": 100,
      "max": 1000,
      "step": 10,
      "default": 500
    },
    {
      "type": "select",
      "id": "overlay_font",
      "label": "Overlay Font",
      "options": [
        { "value": "Arial", "label": "Arial" },
        { "value": "Helvetica", "label": "Helvetica" },
        { "value": "Times New Roman", "label": "Times New Roman" },
        { "value": "Courier New", "label": "Courier New" },
        { "value": "Verdana", "label": "Verdana" },
        { "value": "Georgia", "label": "Georgia" },
        { "value": "Palatino", "label": "Palatino" },
        { "value": "Garamond", "label": "Garamond" },
        { "value": "Bookman", "label": "Bookman" },
        { "value": "Trebuchet MS", "label": "Trebuchet MS" }
      ],
      "default": "Arial"
    },
    {
      "type": "color",
      "id": "overlay_font_color",
      "label": "Overlay Font Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "overlay_font_size",
      "label": "Overlay Font Size (px)",
      "min": 10,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Background Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Overlay Text"
        },
        {
          "type": "select",
          "id": "text_position",
          "label": "Text Position",
          "options": [
            {
              "value": "top-left",
              "label": "Top Left"
            },
            {
              "value": "top-right",
              "label": "Top Right"
            },
            {
              "value": "bottom-left",
              "label": "Bottom Left"
            },
            {
              "value": "bottom-right",
              "label": "Bottom Right"
            },
            {
              "value": "center",
              "label": "Center"
            }
          ],
          "default": "bottom-left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SA - Tinder Swiper",
      "category": "Custom"
    }
  ]
}
{% endschema %}
<!-- Include the necessary scripts and styles for the slider

import"./modulepreload-polyfill.b7f2da20.js";
import{S as r}from"./vendor.602a9696.js";
import{E as e}from"./effect-tinder.f396dd4b.js";
const o=new r(".swiper",{modules:[e],effect:"tinder",grabCursor:!0});window.swiper=o;
-->
<script type="module">
    import "https://app.sectionsanywhere.com/store/sections/sa-tinder-swiper/extras/modulepreload-polyfill.js";
    import { S as r } from "https://app.sectionsanywhere.com/store/sections/sa-tinder-swiper/extras/vendor.js";
    import { E as e } from "https://app.sectionsanywhere.com/store/sections/sa-tinder-swiper/extras/effect-tinder.js";

    const o = new r(".swiper", { modules: [e], effect: "tinder", grabCursor: !0 });
    window.swiper = o;
</script>
<link rel="stylesheet" href="https://app.sectionsanywhere.com/store/sections/sa-tinder-swiper/extras/effect-tinder.css" />
<div id="app">
  <!-- Tinder slider -->
  <div class="swiper swiper-tinder swiper-3d swiper-initialized swiper-horizontal swiper-watch-progress">
    <div class="swiper-wrapper" style="cursor: grab; transition-duration: 300ms">
      {% for block in section.blocks %}
      <div class="swiper-slide" style="width: 348px; z-index: {{ forloop.index }}; transform: translate3d(348px, -{{ forloop.index }}*10px, 0px) rotateZ(45deg); opacity: {{ forloop.index }}*0.2; transform-origin: center bottom; transition-duration: 300ms;">
        <div style="position: relative; height: {{ section.settings.image_height }}px;">
          <img src="{{ block.settings.image | img_url: 'master' }}" alt="" style="height: 100%; width: 100%; object-fit: cover;" />
          {% if block.settings.text != "" %}
          <div class="demo-slide-name {{ block.settings.text_position }}" style="font-family: {{ section.settings.overlay_font }}; color: {{ section.settings.overlay_font_color }}; font-size: {{ section.settings.overlay_font_size }}px; background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity }};">
            <b>{{ block.settings.text }}</b>
          </div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>



<style>
.demo-slide-name {
  position: absolute;
  padding: 5px;
}
.demo-slide-name.top-left {
  top: 0;
  left: 0;
}
.demo-slide-name.top-right {
  top: 0;
  right: 0;
}
.demo-slide-name.bottom-left {
  bottom: 0;
  left: 0;
}
.demo-slide-name.bottom-right {
  bottom: 0;
  right: 0;
}
.demo-slide-name.center {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
</style>
