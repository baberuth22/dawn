@media (max-width: 767px) {

.featured_blocks3 {
    flex-direction:column;
}
  .featured_container3 {
    padding: 0 20px;
  }
  .featured_main3 {
    min-height: 500px;
  }
  .featured_wrapper3 {
    flex-direction: column;
  }
  .featured_item3 {
    margin-top: 0px;
  }
  .featured_article3 {
    font-size: 16px;
  }
  .featured_title3 {
    font-size: 24px;
  }
  .featured_description3 {
    font-size: 16px;
    max-width: 90%;
  }
  .featured_item-info3 a {
    font-size: 16px;
  }
}
</style>
