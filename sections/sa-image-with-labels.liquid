{% schema %}

{
  "name": "SA - Image with Labels",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    }
  ],
  "blocks": [
    {
      "type": "label",
      "name": "Label",
      "settings": [
        {
          "type": "text",
          "id": "label_text",
          "label": "Label Text"
        },
        {
          "type": "color",
          "id": "label_text_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "label_bg_color",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "label_left",
          "label": "Left Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "label_top",
          "label": "Top Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "select",
          "id": "pointer_direction",
          "label": "Pointer Direction",
          "options": [
            { "value": "up", "label": "Up" },
            { "value": "down", "label": "Down" },
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ],
          "default": "up"
        },
        {
          "type": "range",
          "id": "pointer_length",
          "label": "Pointer Length (px)",
          "default": 50,
          "min": 0,
          "max": 500,
          "step": 5,
          "unit": "px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SA - Image with Labels",
      "category": "Custom"
    }
  ]
}


{% endschema %}


<div class="sa-image-with-labels">
  {% if section.settings.main_image %}
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Image" class="main-image">
    {% for block in section.blocks %}
      {% assign pointer_length = block.settings.pointer_length %}
      {% assign pointer_direction = block.settings.pointer_direction %}
      {% assign label_left = block.settings.label_left %}
      {% assign label_top = block.settings.label_top %}
      
      {% if pointer_direction == 'up' %}
        {% assign label_left = block.settings.label_left %}
        {% assign label_top = block.settings.label_top | minus: pointer_length %}
      {% elsif pointer_direction == 'down' %}
        {% assign label_left = block.settings.label_left %}
        {% assign label_top = block.settings.label_top | plus: pointer_length %}
      {% elsif pointer_direction == 'left' %}
        {% assign label_left = block.settings.label_left | minus: pointer_length %}
        {% assign label_top = block.settings.label_top %}
      {% elsif pointer_direction == 'right' %}
        {% assign label_left = block.settings.label_left | plus: pointer_length %}
        {% assign label_top = block.settings.label_top %}
      {% endif %}
      
      <div class="label" style="left: {{ label_left }}%; top: {{ label_top }}%; color: {{ block.settings.label_text_color }}; background-color: {{ block.settings.label_bg_color }};">
        <span class="label-text">{{ block.settings.label_text }}</span>
        <div class="line" style="height: {{ pointer_length }}px; transform: rotate({% case pointer_direction %}{% when 'up' %}180deg{% when 'down' %}0deg{% when 'left' %}-90deg{% when 'right' %}90deg{% endcase %});"></div>
      </div>
    {% endfor %}
  {% endif %}
</div>

<style>
  .sa-image-with-labels {
    position: relative;
  }
  .sa-image-with-labels .main-image {
    display: block;
    width: 100%;
  }
  .sa-image-with-labels .label {
    position: absolute;
    transform: translate(-50%, -50%);
  }
  .sa-image-with-labels .label .label-text {
    padding: 5px;
    border: 1px solid #000;
    border-radius: 3px;
  }
  .sa-image-with-labels .label .line {
    width: 2px;
    background: #000;
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform-origin: bottom center;
  }
</style>
