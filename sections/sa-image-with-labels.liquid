{% schema %}


{
  "name": "SA - Image with Labels",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    }
  ],
  "blocks": [
    {
      "type": "label",
      "name": "Label",
      "settings": [
        {
          "type": "text",
          "id": "label_text",
          "label": "Label Text"
        },
        {
          "type": "color",
          "id": "label_text_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "label_bg_color",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "label_bg_opacity",
          "label": "Background Opacity",
          "options": [
            { "value": "1", "label": "Opaque" },
            { "value": "0.5", "label": "Semi-Transparent" },
            { "value": "0", "label": "Transparent" }
          ],
          "default": "1"
        },
        {
          "type": "color",
          "id": "label_border_color",
          "label": "Border Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "label_border_radius",
          "label": "Border Radius (px)",
          "default": 3,
          "min": 0,
          "max": 20,
          "step": 1,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "label_left",
          "label": "Left Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "label_top",
          "label": "Top Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "select",
          "id": "pointer_direction",
          "label": "Pointer Direction",
          "options": [
            { "value": "up", "label": "Up" },
            { "value": "down", "label": "Down" },
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ],
          "default": "up"
        },
        {
          "type": "range",
          "id": "pointer_length",
          "label": "Pointer Length (px)",
          "default": 50,
          "min": 0,
          "max": 500,
          "step": 5,
          "unit": "px"
        },
        {
          "type": "select",
          "id": "line_style",
          "label": "Line Style",
          "options": [
            { "value": "arrow", "label": "Arrow" },
            { "value": "pointer", "label": "Pointer" },
            { "value": "line", "label": "Straight Line" }
          ],
          "default": "line"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SA - Image with Labels",
      "category": "Custom"
    }
  ]
}



{% endschema %}

<div class="sa-image-with-labels">
  {% if section.settings.main_image %}
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Image" class="main-image">
    {% for block in section.blocks %}
      <div class="label" style="left: {{ block.settings.label_left }}%; top: {{ block.settings.label_top }}%; color: {{ block.settings.label_text_color }}; background-color: {{ block.settings.label_bg_color }}; opacity: {{ block.settings.label_bg_opacity }}; border-color: {{ block.settings.label_border_color }}; border-radius: {{ block.settings.label_border_radius }}px;">
        <span class="label-text">{{ block.settings.label_text }}</span>
        <div class="line {{ block.settings.line_style }} {{ block.settings.pointer_direction }}" style="width: {{ block.settings.pointer_length }}px;"></div>
      </div>
    {% endfor %}
  {% endif %}
</div>

<style>
  .sa-image-with-labels {
    position: relative;
  }
  .sa-image-with-labels .main-image {
    display: block;
    width: 100%;
  }
  .sa-image-with-labels .label {
    position: absolute;
    transform: translate(-50%, -50%);
    padding: 5px;
    border-width: 1px;
    border-style: solid;
  }
  .sa-image-with-labels .label .label-text {
    z-index: 10;
  }
  .sa-image-with-labels .label .line {
    position: absolute;
    background: #000;
    z-index: 5;
  }
  .sa-image-with-labels .label .line.up {
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    height: var(--pointer-length);
    width: 2px;
  }
  .sa-image-with-labels .label .line.down {
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    height: var(--pointer-length);
    width: 2px;
  }
  .sa-image-with-labels .label .line.left {
    right: 100%;
    top: 50%;
    transform: translateY(-50%);
    width: var(--pointer-length);
    height: 2px;
  }
  .sa-image-with-labels .label .line.right {
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    width: var(--pointer-length);
    height: 2px;
  }
  .sa-image-with-labels .label .line.arrow::after {
    content: '';
    position: absolute;
    border: 5px solid transparent;
  }
  .sa-image-with-labels .label .line.arrow.up::after {
    border-bottom: 5px solid #000;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
  }
  .sa-image-with-labels .label .line.arrow.down::after {
    border-top: 5px solid #000;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
  }
  .sa-image-with-labels .label .line.arrow.left::after {
    border-right: 5px solid #000;
    right: 100%;
    top: 50%;
    transform: translateY(-50%);
  }
  .sa-image-with-labels .label .line.arrow.right::after {
    border-left: 5px solid #000;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
  }
  .sa-image-with-labels .label .line.pointer::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border: 5px solid #000;
  }
  .sa-image-with-labels .label .line.pointer.up::after {
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
  }
  .sa-image-with-labels .label .line.pointer.down::after {
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
  }
  .sa-image-with-labels .label .line.pointer.left::after {
    right: 100%;
    top: 50%;
    transform: translateY(-50%);
  }
  .sa-image-with-labels .label .line.pointer.right::after {
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
  }
</style>
