{% schema %}
{
  "name": "SA - Image with Labels",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    }
  ],
  "blocks": [
    {
      "type": "label",
      "name": "Label",
      "settings": [
        {
          "type": "text",
          "id": "label_text",
          "label": "Label Text"
        },
        {
          "type": "range",
          "id": "label_left",
          "label": "Left Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "label_top",
          "label": "Top Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SA - Image with Labels",
      "category": "Custom"
    }
  ]
}

{% endschema %}

<div class="sa-image-with-labels">
  {% if section.settings.main_image %}
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Image" class="main-image">
    {% for block in section.blocks %}
      <div class="label" style="left: {{ block.settings.label_left }}%; top: {{ block.settings.label_top }}%;">
        <span class="label-text">{{ block.settings.label_text }}</span>
        <div class="line"></div>
      </div>
    {% endfor %}
  {% endif %}
</div>

<style>
  .sa-image-with-labels {
    position: relative;
  }
  .sa-image-with-labels .main-image {
    display: block;
    width: 100%;
  }
  .sa-image-with-labels .label {
    position: absolute;
    transform: translate(-50%, -50%);
  }
  .sa-image-with-labels .label .label-text {
    background: #fff;
    padding: 5px;
    border: 1px solid #000;
    border-radius: 3px;
  }
  .sa-image-with-labels .label .line {
    width: 2px;
    height: 50px;
    background: #000;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>
