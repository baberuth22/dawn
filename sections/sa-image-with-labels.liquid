{% schema %}


{
  "name": "SA - Image with Labels",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    }
  ],
  "blocks": [
    {
      "type": "label",
      "name": "Label",
      "settings": [
        {
          "type": "text",
          "id": "label_text",
          "label": "Label Text"
        },
        {
          "type": "color",
          "id": "label_text_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "label_bg_color",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "select",
          "id": "label_bg_opacity",
          "label": "Background Opacity",
          "options": [
            { "value": "1", "label": "Opaque" },
            { "value": "0.5", "label": "Semi-Transparent" },
            { "value": "0", "label": "Transparent" }
          ],
          "default": "1"
        },
        {
          "type": "color",
          "id": "label_border_color",
          "label": "Border Color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "label_border_radius",
          "label": "Border Radius (px)",
          "default": 3,
          "min": 0,
          "max": 20,
          "step": 1,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "label_left",
          "label": "Left Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "label_top",
          "label": "Top Position (%)",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        },
        {
          "type": "select",
          "id": "pointer_direction",
          "label": "Pointer Direction",
          "options": [
            { "value": "up", "label": "Up" },
            { "value": "down", "label": "Down" },
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ],
          "default": "up"
        },
        {
          "type": "range",
          "id": "pointer_length",
          "label": "Pointer Length (px)",
          "default": 50,
          "min": 0,
          "max": 500,
          "step": 5,
          "unit": "px"
        },
        {
          "type": "select",
          "id": "line_style",
          "label": "Line Style",
          "options": [
            { "value": "arrow", "label": "Arrow" },
            { "value": "pointer", "label": "Pointer" },
            { "value": "line", "label": "Straight Line" }
          ],
          "default": "line"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SA - Image with Labels",
      "category": "Custom"
    }
  ]
}



{% endschema %}

<div class="sa-image-with-labels">
  {% if section.settings.main_image %}
    <img src="{{ section.settings.main_image | img_url: 'master' }}" alt="Main Image" class="main-image">
    {% for block in section.blocks %}
      <div class="label" style="left: {{ block.settings.label_left }}%; top: {{ block.settings.label_top }}%; color: {{ block.settings.label_text_color }}; background-color: {{ block.settings.label_bg_color }}; opacity: {{ block.settings.label_bg_opacity }}; border-color: {{ block.settings.label_border_color }}; border-radius: {{ block.settings.label_border_radius }}px;">
        <span class="label-text">{{ block.settings.label_text }}</span>
        {% assign pointer_length = block.settings.pointer_length %}
        {% assign pointer_direction = block.settings.pointer_direction %}
        {% assign line_color = block.settings.label_border_color %}
        {% assign line_style = block.settings.line_style %}
        {% if line_style == 'arrow' %}
          {% if pointer_direction == 'up' %}
            <svg class="line" height="{{ pointer_length }}" width="10" style="fill: {{ line_color }}; bottom: 100%; left: 50%; transform: translateX(-50%);">
              <polygon points="0,{{ pointer_length }} 5,0 10,{{ pointer_length }}" />
            </svg>
          {% elsif pointer_direction == 'down' %}
            <svg class="line" height="{{ pointer_length }}" width="10" style="fill: {{ line_color }}; top: 100%; left: 50%; transform: translateX(-50%);">
              <polygon points="0,0 5,{{ pointer_length }} 10,0" />
            </svg>
          {% elsif pointer_direction == 'left' %}
            <svg class="line" width="{{ pointer_length }}" height="10" style="fill: {{ line_color }}; right: 100%; top: 50%; transform: translateY(-50%);">
              <polygon points="{{ pointer_length }},0 0,5 {{ pointer_length }},10" />
            </svg>
          {% elsif pointer_direction == 'right' %}
            <svg class="line" width="{{ pointer_length }}" height="10" style="fill: {{ line_color }}; left: 100%; top: 50%; transform: translateY(-50%);">
              <polygon points="0,0 {{ pointer_length }},5 0,10" />
            </svg>
          {% endif %}
        {% elsif line_style == 'pointer' %}
          {% if pointer_direction == 'up' %}
            <svg class="line" height="{{ pointer_length }}" width="10" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; bottom: 100%; left: 50%; transform: translateX(-50%);">
              <line x1="5" y1="0" x2="5" y2="{{ pointer_length }}" />
              <polygon points="0,{{ pointer_length }} 5,{{ pointer_length | minus: 10 }} 10,{{ pointer_length }}" />
            </svg>
          {% elsif pointer_direction == 'down' %}
            <svg class="line" height="{{ pointer_length }}" width="10" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; top: 100%; left: 50%; transform: translateX(-50%);">
              <line x1="5" y1="{{ pointer_length }}" x2="5" y2="0" />
              <polygon points="0,0 5,10 10,0" />
            </svg>
          {% elsif pointer_direction == 'left' %}
            <svg class="line" width="{{ pointer_length }}" height="10" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; right: 100%; top: 50%; transform: translateY(-50%);">
              <line x1="{{ pointer_length }}" y1="5" x2="0" y2="5" />
              <polygon points="{{ pointer_length }},0 {{ pointer_length | minus: 10 }},5 {{ pointer_length }},10" />
            </svg>
          {% elsif pointer_direction == 'right' %}
            <svg class="line" width="{{ pointer_length }}" height="10" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; left: 100%; top: 50%; transform: translateY(-50%);">
              <line x1="0" y1="5" x2="{{ pointer_length }}" y2="5" />
              <polygon points="0,0 10,5 0,10" />
            </svg>
          {% endif %}
        {% else %}
          {% if pointer_direction == 'up' %}
            <svg class="line" height="{{ pointer_length }}" width="2" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; bottom: 100%; left: 50%; transform: translateX(-50%);">
              <line x1="1" y1="0" x2="1" y2="{{ pointer_length }}" />
            </svg>
          {% elsif pointer_direction == 'down' %}
            <svg class="line" height="{{ pointer_length }}" width="2" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; top: 100%; left: 50%; transform: translateX(-50%);">
              <line x1="1" y1="{{ pointer_length }}" x2="1" y2="0" />
            </svg>
          {% elsif pointer_direction == 'left' %}
            <svg class="line" width="{{ pointer_length }}" height="2" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; right: 100%; top: 50%; transform: translateY(-50%);">
              <line x1="{{ pointer_length }}" y1="1" x2="0" y2="1" />
            </svg>
          {% elsif pointer_direction == 'right' %}
            <svg class="line" width="{{ pointer_length }}" height="2" style="stroke: {{ line_color }}; stroke-width: 2px; fill: none; left: 100%; top: 50%; transform: translateY(-50%);">
              <line x1="0" y1="1" x2="{{ pointer_length }}" y2="1" />
            </svg>
          {% endif %}
        {% endif %}
      </div>
    {% endfor %}
  {% endif %}
</div>

<style>
  .sa-image-with-labels {
    position: relative;
  }
  .sa-image-with-labels .main-image {
    display: block;
    width: 100%;
  }
  .sa-image-with-labels .label {
    position: absolute;
    transform: translate(-50%, -50%);
    padding: 5px;
    border-width: 1px;
    border-style: solid;
  }
  .sa-image-with-labels .label .label-text {
    z-index: 10;
  }
  .sa-image-with-labels .label .line {
    position: absolute;
    z-index: 5;
  }
</style>
