    "name": "SA - Back to Top",
    "settings": [
    {
        "type": "select",
        "id": "custom_svg",
        "label": "Custom SVG",
        "options": [
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "pointer",
            "label": "Pointer"
          },
          {
            "value": "slim",
            "label": "Slim"
          },
          {
            "value": "custom",
            "label": "Custom Path"
          }
        ],
        "default": "default"
