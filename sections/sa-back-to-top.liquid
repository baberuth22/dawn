        "id": "bottom_dst_to_edge",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Distance from bottom",
        "default": 20
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default":"#F4F2F2"
      },
      {
        "type": "color",
        "id": "border_color",
        "label": "Border color",
        "default": "#CEC5C5"
      },
      {
        "type": "color",
        "id": "arrow_color",
        "label": "Arrow color",
        "default": "#333333"
      },
      {
        "type": "range",
        "id": "button_size",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Button size",
        "default": 54
      },
      {
        "type": "range",
        "id": "arrow_size",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "Arrow size",
        "default": 30
      },
      {
        "type": "range",
        "id": "show_when_precent_of_page",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Show when the view is in the bottom X% of the page",
        "default": 30,
        "info": "0% means it will never show, 100% means it will always show"
      },
      {
        "type": "checkbox",
        "id": "hide_on_mobile",
        "label": "Hide on mobile?",
        "default": false
      },
      {
        "type": "range",
        "id": "border_thickness",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "Border thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "initial_opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Initial opacity",
        "default": 50
      },
      {
        "type": "checkbox",
        "id": "increase_opacity",
        "label": "Increase opacity as scrolling down?",
        "default": false
      },
      {
        "type": "select",
        "id": "scroll_behavior",
        "label": "Scroll Behavior",
        "options": [
          {
            "value": "auto",
            "label": "Auto"
          },
          {
            "value": "smooth",
            "label": "Smooth"
          },
          {
            "value": "ease",
            "label": "Ease"
          },
          {
            "value": "linear",
            "label": "Linear"
          },
          {
            "value": "ease-in",
            "label": "Ease-In"
          },
          {
            "value": "ease-out",
            "label": "Ease-Out"
          },
          {
            "value": "ease-in-out",
            "label": "Ease-In-Out"
          }
        ],
        "default": "smooth"
      }
    ],
    "presets": [
      {
        "name": "SA - Back to Top button"
      }
    ]
  }
  {% endschema %}
  