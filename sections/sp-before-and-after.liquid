  }

  {% if section.settings.override_fonts %}
    {{ section.settings.text_font | font_face }}
    {{ section.settings.headline_font | font_face }}
  {% endif %}

  #sp-ba-{{ section.id }}.sp-ba-wrap p, 
  #sp-ba-{{ section.id }}.sp-ba-wrap li {
    font-size: {{ section.settings.text_size }}px;
    {% if section.settings.override_fonts %}
      font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
      font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
    color: {{ section.settings.text_color }};
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap p {
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    padding: 0;
    text-align: {{ section.settings.alignment }};
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap li {
    text-align: {{ section.settings.alignment }};
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap p:last-child {
    padding: 0;
    margin: 0;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap h1,
  #sp-ba-{{ section.id }}.sp-ba-wrap h2,
  #sp-ba-{{ section.id }}.sp-ba-wrap h3,
  #sp-ba-{{ section.id }}.sp-ba-wrap h4,
  #sp-ba-{{ section.id }}.sp-ba-wrap h5 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
      font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
      font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
    color: {{ section.settings.headline_color }};
    text-align: {{ section.settings.alignment }};
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    padding: 0;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap p {
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    padding: 0;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap h2 {
    font-size: {{ section.settings.headline_size | minus: 5 }}px;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap h3 {
    font-size: {{ section.settings.headline_size | minus: 10 }}px;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap h4 {
    font-size: {{ section.settings.headline_size | minus: 15 }}px;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap h5 {
    font-size: {{ section.settings.headline_size | minus: 20 }}px;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
    overflow: hidden;
  }

  #sp-ba-{{ section.id }} .sp-ba-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    gap: {{ section.settings.grid_gap }}px;
  }

  #sp-ba-{{ section.id }}.sp-ba-wrap .sp-ba-rt {
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    padding: 0;
  }

  #sp-ba-{{ section.id }} .sp-ba-grid-left {
    display: grid;
    {% if section.settings.video_aspect_ratio == "21 / 9" %}
    grid-template-columns: 3fr 1fr;
    {% elsif section.settings.video_aspect_ratio == "16 / 9"%}
    grid-template-columns: 2fr 1fr;
    {% else %}
    grid-template-columns: 1fr 1fr;
    {% endif %}
    align-items: center;
  }

  #sp-ba-{{ section.id }} .sp-ba-grid-right {
    display: grid;
    {% if section.settings.video_aspect_ratio == "21 / 9" %}
    grid-template-columns: 1fr 3fr;
    {% elsif section.settings.video_aspect_ratio == "16 / 9"%}
    grid-template-columns: 1fr 2fr;
    {% else %}
    grid-template-columns: 1fr 1fr;
    {% endif %}
    align-items: center;
  }

  #sp-ba-{{ section.id }} .sp-ba-grid-left .sp-ba-column-media {
    grid-column: 1;
    grid-row: 1;
  }
  
  #sp-ba-{{ section.id }} .sp-ba-grid-left .sp-ba-column-text {
    grid-column: 2;
    grid-row: 1;
  }

  #sp-ba-{{ section.id }} .sp-ba-grid-right .sp-ba-column-media {
    grid-column: 2;
    grid-row: 1;
  }
  
  #sp-ba-{{ section.id }} .sp-ba-grid-right .sp-ba-column-text {
    grid-column: 1;
    grid-row: 1;
  }

  /* bottom */
  #sp-ba-{{ section.id }} .sp-ba-grid-bottom {
    display: grid;
    grid-template-columns: 1fr;
  }

  @media only screen and (max-width: 900px) {
    #sp-ba-{{ section.id }} .sp-ba-grid-left,
    #sp-ba-{{ section.id }} .sp-ba-grid-right {
      display: block;
    }
  }

  @media only screen and (max-width: 900px) {
    #sp-ba-{{ section.id }} .sp-ba-column-text {
      margin: 0 0 {{ section.settings.grid_gap }}px 0;
    }
  }

  #sp-ba-{{ section.id }} a.sp-ba-cta {
    display: inline-block;
    padding: {{ section.settings.button_padding_tb }}px {{ section.settings.button_padding_lr }}px;
    background-image: {{ section.settings.button_background_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_text_size }}px !important;
    text-decoration: none;
    cursor: pointer;
    text-shadow: none;
    transition: .25s all;
    font-size: 13px;
  }

  /* before and after */
  #sp-ba-{{ section.id }} .sp-ba-container-wrap {
    {% if section.settings.media_shadow %}box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);{% endif %}
    border-radius: {{ section.settings.media_radius }}px;
  }
  
  #sp-ba-{{ section.id }} .sp-ba-container {
    width: 100%;
    aspect-ratio: {{ section.settings.media_aspect_ratio }};
    position: relative;
    clip-path: border-box;
    overflow: hidden;
    border-radius: {{ section.settings.media_radius }}px;
  }

  #sp-ba-{{ section.id }} .sp-ba-container img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: 100%;
    aspect-ratio: {{ section.settings.media_aspect_ratio }};
    object-fit: cover;
  }

  #sp-ba-{{ section.id }} .sp-ba-container img:first-child {
  }

  #sp-ba-{{ section.id }} .sp-ba-container img:nth-child(2) {
    clip-path: polygon(0 0, var(--sp-ba-clip-{{ short_id }}) 0, var(--sp-ba-clip-{{ short_id }}) 100%, 0% 100%);
  }

  #sp-ba-{{ section.id }} .sp-ba-slider {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    -webkit-appearance: none;
    appearance: none;
    width: calc(100% - 20px);
    height: calc(100% - 20px);
    background: rgba(255, 255, 255, 0);
    outline: none;
    margin: 10px;
    padding: 0;
  }

  #sp-ba-{{ section.id }} .sp-ba-slider::-webkit-slider-thumb {
    -moz-appearance: none;
    appearance: none;
    width: 20px;
    height: 800px;
    background: transparent;
    cursor: pointer;
    border: none;
    outline: none;
    box-shadow: none;
  }

  #sp-ba-{{ section.id }} .sp-ba-slider::-moz-range-thumb {
    -moz-appearance: none;
    appearance: none;
    width: 20px;
    height: 800px;
    background: transparent;
    cursor: pointer;
    outline: none;
    box-shadow: none;
    border: none;
  }

  #sp-ba-{{ section.id }} .sp-ba-icon {
    position: absolute;
    top: 50%;
    left: var(--sp-ba-clip-{{ short_id }});
    width: 50px;
    height: 50px;
    transform: translateX(-25px) translatey(-25px);
    pointer-events: none;
    background: rgba(255,255,255,.6);
    border-radius: 50%;
  }

  #sp-ba-{{ section.id }} .sp-ba-icon svg {
    width: 25px;
    height: 25px;
    fill: #111;
    pointer-events: none;
    transform: translateX(12.5px) translateY(12.5px);
  }

  #sp-ba-{{ section.id }} .sp-ba-bar {
    position: absolute;
    top: 0;
    left: var(--sp-ba-clip-{{ short_id }});
    width: 5px;
    height: 100%;
    transform: translateX(-2.5px);
    pointer-events: none;
    background: rgba(255,255,255,.6);
  }

  #sp-ba-{{ section.id }} .sp-ba-before,
  #sp-ba-{{ section.id }} .sp-ba-after {
    display: inline-block;
    position: absolute;
    background: rgba(255,255,255,.75);
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 13px;
    color: #111;
  }

  #sp-ba-{{ section.id }} .sp-ba-before {
    top: 10px;
    left: 10px;
  }

  #sp-ba-{{ section.id }} .sp-ba-after {
    top: 10px;
    right: 10px;
  }
</style>


<div id="sp-ba-{{ section.id }}" class="sp-ba-wrap" sp-wrap>
  <div class="sp-ba-grid sp-ba-grid-{{ section.settings.media_location }}" sp-container>

    {% if section.settings.show_text %}
    <div class="sp-ba-column sp-ba-column-text" sp-column>
      {% if section.settings.headline != '' %}<h2 class="heading">{{ section.settings.headline }}</h2>{% endif %}
      {% if section.settings.content != '' %}<div class="sp-ba-rt">{{ section.settings.content }}</div>{% endif %}
      {% if section.settings.link_text != '' %}<p><a class="sp-ba-cta" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a></p>{% endif %}
    </div>
    {% endif %}

    <div class="sp-ba-column sp-ba-column-media" sp-column>

      <div class="sp-ba-container-wrap">
        <div class="sp-ba-container">
          {% if section.settings.after_image != blank %}
            <img 
              src="{{ section.settings.after_image | image_url: width: 1024 }}"
              loading="lazy"
              srcset="{{ section.settings.after_image | image_url: width: 600 }} 600w, {{ section.settings.after_image | image_url: width: 1024 }} 1100w">
          {% else %}
            <img 
              src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 500' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='100%' height='100%' fill='%23C8C8C8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
          {% endif %}
          {% if section.settings.before_image != blank %}
            <img 
              src="{{ section.settings.before_image | image_url: width: 1024 }}"
              loading="lazy"
              srcset="{{ section.settings.before_image | image_url: width: 600 }} 600w, {{ section.settings.before_image | image_url: width: 1024 }} 1100w">
          {% else %}
            <img 
              src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 500' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='100%' height='100%' fill='%23D8D8D8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
          {% endif %}
          
    
          <span class="sp-ba-before">{{ section.settings.before_caption }}</span>
          <span class="sp-ba-after">{{ section.settings.after_caption }}</span>
          
          <input id="sp-ba-slider-{{ short_id }}" type="range" min="0" max="100" value="50" class="sp-ba-slider">
    
          <span class="sp-ba-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960"><path d="m680-280-56-56 103-104H520v-80h207L624-624l56-56 200 200-200 200Zm-400 0L80-480l200-200 56 56-103 104h207v80H233l103 104-56 56Z"/></svg></span>
        
          {% if section.settings.show_bar %}<span class="sp-ba-bar"></span>{% endif %}
        
        </div>
        <!-- /.sp-ba-container-->
      </div>
      <!-- /.sp-ba-container-wrap-->

    </div>
    
  </div>
</div>

<script>
  var el_{{ short_id }} = document.querySelector(`#sp-ba-slider-{{ short_id }}`);

  el_{{ short_id }}.addEventListener(`input`, (e)=>{
    const pos = e.target.value;
    var r = document.querySelector(':root');

    r.style.setProperty('--sp-ba-clip-{{ short_id }}', `${pos}%`);
  });
</script>


