<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  #sp-split-image-{{ section.id }}.sp-split-image-wrap p,
  #sp-split-image-{{ section.id }}.sp-split-image-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
  }

  #sp-split-image-{{ section.id }}.sp-split-image-wrap h2 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
  }

  #sp-split-image-{{ section.id }}.sp-split-image-wrap {
    background-image: {{section.settings.background_color}};
    width: 100%;
  }

  #sp-split-image-{{ section.id }} .sp-split-image-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }
  
  #sp-split-image-{{ section.id }} .sp-split-image-grid-left {
    display: grid;
    {% if section.settings.image_aspect_ratio == "21 / 9" %}
    grid-template-columns: 3fr 1fr;
    {% elsif section.settings.image_aspect_ratio == "16 / 9"%}
    grid-template-columns: 2fr 1fr;
    {% else %}
    grid-template-columns: 1fr 1fr;
    {% endif %}
    align-items: center;
    gap: 30px;
  }

  #sp-split-image-{{ section.id }} .sp-split-image-grid-right {
    display: grid;
    {% if section.settings.image_aspect_ratio == "21 / 9" %}
    grid-template-columns: 1fr 3fr;
    {% elsif section.settings.image_aspect_ratio == "16 / 9"%}
    grid-template-columns: 1fr 2fr;
    {% else %}
    grid-template-columns: 1fr 1fr;
    {% endif %}
    align-items: center;
    gap: 20px;
  }

  @media only screen and (max-width: 900px) {
    #sp-split-image-{{ section.id }} .sp-split-image-grid-left,
    #sp-split-image-{{ section.id }} .sp-split-image-grid-right {
      display: block;
    }
  }

  #sp-split-image-{{ section.id }} .sp-split-image-mobile-text {
    display: none;
  }

  @media only screen and (max-width: 900px) {
    #sp-split-image-{{ section.id }} .sp-split-image-column {
      padding: 5px 0;
    }

    #sp-split-image-{{ section.id }} .sp-split-image-column-text {
      display: none;
    }

    #sp-split-image-{{ section.id }} .sp-split-image-mobile-text {
      display: block;
    }
  }

  #sp-split-image-{{ section.id }} .sp-split-image-grid img {
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    object-fit: cover;
    width: 100%;
    display: block;
    border-radius: {{ section.settings.border_radius }}px;
    {% if section.settings.media_shadow %}box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);{% endif %}
  }

  #sp-split-image-{{ section.id }} .sp-split-image-grid h2, 
  #sp-split-image-{{ section.id }} .sp-split-image-grid p {
    text-align: center;
    margin: 0 0 {{ section.settings.element_spacing }}px 0 !important;
    padding: 0 !important;
    color: {{ section.settings.text_color }};
  }

  #sp-split-image-{{ section.id }} .sp-split-image-grid p:last-child {
    margin: 0 !important;
    padding: 0;
  }

  #sp-split-image-{{ section.id }} a.sp-split-image-cta {
    display: inline-block;
    padding: 10px 20px;
    padding: {{ section.settings.button_padding_tb }}px {{ section.settings.button_padding_lr }}px;
    background-image: {{ section.settings.button_background_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    color: {{ section.settings.button_text_color }} !important;
    font-size: {{ section.settings.button_text_size }}px !important;
    text-decoration: none;
    cursor: pointer;
    text-shadow: none;
  }
</style>



<div id="sp-split-image-{{ section.id }}" class="sp-split-image-wrap" sp-wrap>
  <div class="sp-split-image-grid sp-split-image-grid-{{ section.settings.image_location }}" sp-container>

    {%- if section.settings.image_location == "left" -%}
    <div class="sp-split-image-column" sp-column>
      {% if section.settings.image %}
        <img src="{{ section.settings.image | image_url: width: 600 }}"
          srcset="{{ section.settings.image | image_url: width: 600 }} 600w, {{ section.settings.image | image_url: width: 1100 }} 1100w">
      {% else %}
        <img src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 250' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='496' height='496' fill='%23D8D8D8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
      {% endif %}
    </div>
    <div class="sp-split-image-column sp-split-image-column-text" sp-column>
      {% if section.settings.headline != '' %}<h2 class="heading">{{ section.settings.headline }}</h2>{% endif %}
      {% if section.settings.content != '' %}<p>{{ section.settings.content }}</p>{% endif %}
      {% if section.settings.link_text != '' %}<p><a class="sp-split-image-cta" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a></p>{% endif %}
    </div>
    {%- endif -%}

    {%- if section.settings.image_location == "right" -%}
    <div class="sp-split-image-column sp-split-image-column-text" sp-column>
      <h2 class="heading">{{ section.settings.headline }}</h2>
      <p>{{ section.settings.content }}</p>
      <p><a class="sp-split-image-cta" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a></p>
    </div>
    <div class="sp-split-image-column" sp-column>
      {% if section.settings.image %}
        <img src="{{ section.settings.image | image_url: width: 600 }}"
          srcset="{{ section.settings.image | image_url: width: 600 }} 600w, {{ section.settings.image | image_url: width: 1100 }} 1100w">
      {% else %}
        <img src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 250' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='496' height='496' fill='%23D8D8D8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
      {% endif %}
    </div>
    {%- endif -%}

    <div class="sp-split-image-mobile-text">
      <h2 class="heading">{{ section.settings.headline }}</h2>
      <p>{{ section.settings.content }}</p>
      <p><a class="sp-split-image-cta" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a></p>
    </div>
    
  </div>
</div>

