{% schema %}
{
  "name": "SA - Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Welcome to Our Store"
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline Color",
      "default": "#ffffff"
    },
    {
      "type": "font_picker",
      "id": "headline_font",
      "label": "Headline Font",
      "default": "work_sans_n6"
    },
    {
      "type": "range",
      "id": "headline_size",
      "label": "Headline Font Size (px)",
      "min": 20,
      "max": 100,
      "default": 40
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Discover our collection"
    },
    {
      "type": "color",
      "id": "subheadline_color",
      "label": "Subheadline Color",
      "default": "#ffffff"
    },
    {
      "type": "font_picker",
      "id": "subheadline_font",
      "label": "Subheadline Font",
      "default": "work_sans_n6"
    },
    {
      "type": "range",
      "id": "subheadline_size",
      "label": "Subheadline Font Size (px)",
      "min": 14,
      "max": 50,
      "default": 24
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#ff6f61"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "content_background_opacity",
      "label": "Content Background Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    }
  ],
  "presets": [
    {
      "name": "SA - Hero Section"
    }
  ]
}
{% endschema %}

<div class="hero-section" style="background-image: url({{ section.settings.background_image | img_url: 'master' }});">
  <div class="hero-content" style="background: rgba(0, 0, 0, {{ section.settings.content_background_opacity }});">
    <h1 class="hero-headline" style="color: {{ section.settings.headline_color }}; font-family: {{ section.settings.headline_font.family }}; font-size: {{ section.settings.headline_size }}px;">
      {{ section.settings.headline }}
    </h1>
    <p class="hero-subheadline" style="color: {{ section.settings.subheadline_color }}; font-family: {{ section.settings.subheadline_font.family }}; font-size: {{ section.settings.subheadline_size }}px;">
      {{ section.settings.subheadline }}
    </p>
    <a href="{{ section.settings.button_link }}" class="hero-button" style="background-color: {{ section.settings.button_color }}; color: {{ section.settings.button_text_color }};">
      {{ section.settings.button_text }}
    </a>
  </div>
</div>

<style>
.hero-section {
  position: relative;
  background-size: cover;
  background-position: center;
  height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
}

.hero-content {
  max-width: 600px;
  padding: 20px;
  border-radius: 8px;
}

.hero-button {
  display: inline-block;
  margin-top: 20px;
  padding: 10px 20px;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s;
}

.hero-button:hover {
  background-color: #e65c54; /* Can be further customized */
}
</style>