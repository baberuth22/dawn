{% schema %}
{
  "name": "SA - Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Discover our collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "SA - Hero Section"
    }
  ]
}
{% endschema %}

<div class="hero-section" style="background-image: url({{ section.settings.background_image | img_url: 'master' }});">
  <div class="hero-content">
    <h1>{{ section.settings.headline }}</h1>
    <p>{{ section.settings.subheadline }}</p>
    <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_text }}</a>
  </div>
</div>

<style>
.hero-section {
  position: relative;
  background-size: cover;
  background-position: center;
  height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
}

.hero-content {
  max-width: 600px;
  padding: 20px;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 8px;
}

.hero-button {
  display: inline-block;
  margin-top: 20px;
  padding: 10px 20px;
  background-color: #ff6f61;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s;
}

.hero-button:hover {
  background-color: #e65c54;
}
</style>