{% capture minify %}
  <style>
    #psb-{{ section.id }} .youtube-base__wrapper {
      aspect-ratio: 16/9;
    }

    #psb-{{ section.id }} iframe {
      width: 100%;
      height: 100%;
    }
  </style>
{% endcapture %}
{{ minify | strip_newlines }}

<div id="psb-{{ section.id }}" class="psb-{{ section.id }} psb-section psb-video-video-youtube-base" style="display: none;">
  <div class="{{ section.settings.container_width }}">
    <div class="youtube-base__wrapper">
      <iframe
        src="https://www.youtube.com/embed/{{ section.settings.youtube_url.id }}"
        title="{{ section.settings.youtube_title }}"
        frameborder="0"
        allowfullscreen
      ></iframe>
    </div>
  </div>
</div>

