{% schema %}
{
  "name": "➕ SA - Conversation Form",
  "settings": [
    {
      "type": "text",
      "id": "form_identifier",
      "label": "Form Identifier (Class or ID)",
      "default": "#myForm",
      "info": "Provide the form's class or ID. For example: #myForm or .myFormClass"
    }
  ],
  "presets": [
    {
      "name": "➕ SA - Conversational Form",
      "category": "Form"
    }
  ]
}
{% endschema %}

<div class="sa-conversational-form"></div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/gh/space10-community/conversational-form@1.0.1/dist/conversational-form.min.js" crossorigin></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    var formIdentifier = "{{ settings.form_identifier }}";
    var formElement = document.querySelector(formIdentifier);

    if (formElement) {
      new cf.ConversationalForm({
        formEl: formElement
      });
    } else {
      console.error("Form element not found with the identifier:", formIdentifier);
    }
  });
</script>
