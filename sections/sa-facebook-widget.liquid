
			{% schema %}
{
  "name": "➕ SA - Facebook Widget",
  "settings": [
    {
      "type": "header",
      "content": "Instructions"
    },
    {
      "type": "paragraph",
      "content": "Enter the SociableKit widget data-embed-id below. To get your data-embed-id, go to the [SociableKit website](https://www.sociablekit.com/)."
    },
    {
      "type": "text",
      "id": "data_embed_id",
      "label": "Data Embed ID"
    },
    {
      "type": "range",
      "id": "side_padding",
      "label": "Side Padding (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "➕ SA - Facebook Widget",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- sa-facebook-widget.liquid -->
<div id="{{ section.id }}" class="sa-facebook-widget" style="padding-left: {{ section.settings.side_padding }}px; padding-right: {{ section.settings.side_padding }}px;">
  {% if section.settings.data_embed_id != blank %}
    <div class='sk-ww-facebook-page-posts' data-embed-id='{{ section.settings.data_embed_id }}'></div>
    <script src='https://widgets.sociablekit.com/facebook-page-posts/widget.js' async defer></script>
  {% else %}
    <p>Please add the SociableKit widget data-embed-id in the section settings.</p>
  {% endif %}
</div>

<style>
  .sa-facebook-widget {
    text-align: center;
    margin: 20px auto;
  }
</style>
		